<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/endFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.pokedex2.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_gameFragment2"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_startFragment_to_endFragment"
            app:destination="@id/endFragment" />
        <action
            android:id="@+id/action_startFragment_to_scoreboardFragment"
            app:destination="@id/scoreboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.pokedex2.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_startFragment2"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_gameFragment_to_endFragment"
            app:destination="@id/endFragment" />
        <action
            android:id="@+id/action_gameFragment_to_scoreboardFragment"
            app:destination="@id/scoreboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/endFragment"
        android:name="com.example.pokedex2.EndFragment"
        android:label="fragment_end"
        tools:layout="@layout/fragment_end" >
        <action
            android:id="@+id/action_endFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_endFragment_to_howToFragment"
            app:destination="@id/howToFragment" />
        <action
            android:id="@+id/action_endFragment_to_noticeFragment"
            app:destination="@id/noticeFragment" />
    </fragment>
    <fragment
        android:id="@+id/scoreboardFragment"
        android:name="com.example.pokedex2.ScoreboardFragment"
        android:label="ScoreboardFragment" >
        <action
            android:id="@+id/action_scoreboardFragment_to_endFragment"
            app:destination="@id/endFragment" />
        <action
            android:id="@+id/action_scoreboardFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/howToFragment"
        android:name="com.example.pokedex2.HowToFragment"
        android:label="HowToFragment" >
        <action
            android:id="@+id/action_howToFragment_to_endFragment"
            app:destination="@id/endFragment" />
        <action
            android:id="@+id/action_howToFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/noticeFragment"
        android:name="com.example.pokedex2.NoticeFragment"
        android:label="NoticeFragment" >
        <action
            android:id="@+id/action_noticeFragment_to_endFragment"
            app:destination="@id/endFragment" />
    </fragment>
</navigation>